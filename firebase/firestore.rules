rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.token.email == userId;
    }
    
    // Admins can read all users (write handled by admin SDK server-side)
    match /users/{userId} {
      allow read: if request.auth != null && 
        (request.auth.token.email == 'tpo@ietdavv.edu.in' || 
         request.auth.token.email == 'hod.cs@ietdavv.edu.in');
    }
  }
}